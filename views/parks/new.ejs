<%- include('../partials/header') %>

    <form action="/parks" method="POST" id="new-park">
        <label>Name:</label>
        <input type="text" name="name"><br>
        <label>Address:</label>
        <input type="text" name="address">
        <br>
        <label>Size:</label>
        <select name="size">
            <option value="small">Small</option>
            <option value="medium">Medium</option>
            <option value="large">Large</option>
        </select>
        <label>Features:</label>
        <div class="">
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Agility Equipment">Agility Equipment</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Benches">Benches</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Dirt">Dirt</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Fenced">Fenced</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Grass">Grass</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Gravel">Gravel</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Pond/Lake">Pond/Lake</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Shade">Shade</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Small Dog Area">Small Dog Area</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Trees">Trees</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Turf (artificial grass)">Turf (artificial grass)</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Wading Pool">Wading Pool</label>
            <label for="" class="checkbox-inline"><input type="checkbox"id="" name="features" value="Water Spicket">Water Spicket</label>
        </div>
        <label>Is there a fee or membership needed?</label>
        <select name="fee">
            <option value="No">No</option>
            <option value="Yes">Yes</option>
        </select>
        <label>Upload Picture:</label>
        <input type="file" id="myFile" name="parkpicture">
        <input type="submit" value="Add Park">

    </form>


